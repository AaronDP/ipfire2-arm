###############################################################################
# Definitions
###############################################################################

include Config

VER = ipfire

THISAPP    = ibod
DIR_APP    = $(DIR_SRC)/src/$(THISAPP)
TARGET     = $(DIR_INFO)/$(THISAPP)

###############################################################################
# Top-level Rules
###############################################################################

install : $(TARGET)

check :

download :

md5 :

###############################################################################
# Installation Details
###############################################################################

$(TARGET) : 
	@$(PREBUILD)
	cd $(DIR_APP) && make ibod
	mkdir -p /etc/ppp
	cd $(DIR_APP) && install -m 0644 ibod.cf /etc/ppp
	cd $(DIR_APP) && install -m 0755 ibod /usr/sbin
	cd $(DIR_APP) && rm -f ibod
	@$(POSTBUILD)
