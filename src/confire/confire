if [ -f "/opt/confire/paks/$1" ]; then

	echo -e "Configuring $1."
	. /opt/confire/paks/$1
	exit 0
else
	echo -e "There is no package with name $1. Exiting."
	exit 1
fi

################################### EOF ####################################################